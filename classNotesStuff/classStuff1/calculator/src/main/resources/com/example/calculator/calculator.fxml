<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox layoutX="30.0" layoutY="149.0" prefHeight="27.0" prefWidth="172.0">
      <children>
         <Label fx:id="display" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="43.0" prefWidth="144.0" text="0">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Button fx:id="buttonCLEAR" mnemonicParsing="false" onAction="#onCLEAR" prefHeight="27.0" prefWidth="71.0" text="CLEAR">
            <padding>
               <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <HBox prefHeight="26.0" prefWidth="217.0">
      <children>
         <TextField fx:id="textField_Add" />
         <Button fx:id="buttonAdd" mnemonicParsing="false" onAction="#onAdd" prefHeight="27.0" prefWidth="71.0" text="+">
            <padding>
               <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
         </Button>
      </children>
   </HBox>
   <HBox layoutX="30.0" layoutY="77.0" prefHeight="26.0" prefWidth="217.0">
      <children>
         <TextField fx:id="textField_Subtract" />
         <Button fx:id="buttonSubtract" mnemonicParsing="false" onAction="#onSubtract" prefHeight="27.0" prefWidth="71.0" text="-">
            <padding>
               <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
         </Button>
      </children>
   </HBox>
   <HBox layoutX="30.0" layoutY="124.0" prefHeight="26.0" prefWidth="217.0">
      <children>
         <TextField fx:id="textField_Multiply" />
         <Button fx:id="buttonMultiply" mnemonicParsing="false" onAction="#onMultiply" prefHeight="27.0" prefWidth="71.0" text="*">
            <padding>
               <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
         </Button>
      </children>
   </HBox>
   <HBox layoutX="30.0" layoutY="171.0" prefHeight="26.0" prefWidth="217.0">
      <children>
         <TextField fx:id="textField_Divide" />
         <Button fx:id="buttonDivide" mnemonicParsing="false" onAction="#onDivide" prefHeight="27.0" prefWidth="71.0" text="/">
            <padding>
               <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
            </padding>
         </Button>
      </children>
   </HBox>
   <HBox layoutX="30.0" layoutY="218.0" prefHeight="26.0" prefWidth="217.0">
      <children>
         <Label fx:id="errorDisplay" alignment="TOP_CENTER" contentDisplay="RIGHT" prefHeight="27.0" prefWidth="226.0" textFill="RED">
            <font>
               <Font size="11.0" />
            </font>
         </Label>
      </children>
   </HBox>
</VBox>
